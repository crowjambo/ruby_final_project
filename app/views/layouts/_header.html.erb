<div class="container"> 
    <div class="row">
        <div class="col-12 pt-3 pb-3 mb-4 border-bottom">
            <div class="float-right">
            <% if account_signed_in? %>
                <%= current_account.full_name %>

                <%= link_to "Profile", "", class: "btn btn-warning" %> 

                <%= link_to "Settings", edit_account_registration_path, class: "btn btn-secondary" %> 

                <%= link_to "Sign Out", destroy_account_session_path, method: :delete, class: "btn btn-primary" %> 

            <% else %>

                <%= link_to "Log In", new_account_session_path, class: "btn btn-outline-primary" %>

                <%= link_to "Sign Up", new_account_registration_path, class: "btn btn-primary" %>

            <% end %>
            </div> 
            <p class="h3"><%= link_to "Reddit Forum", root_path %></p>
        </div>
    </div>
</div>